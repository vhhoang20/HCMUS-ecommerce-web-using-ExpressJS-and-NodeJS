<!-- Information Product-->
<div class="container-fluid pt-4 px-4">
    {{#each product}}
        <div class="row g-4">
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Thông tin sản phẩm</h6>
                    <form method="post" action="/admin/product/{{this.slug}}">
                        <div class="mb-3">
                            <label for="name" class="form-label">Tên sản phẩm</label>
                            <input type="text" class="form-control" name="name"id="name" value="{{this.name}}">
                        </div>
                        <div class="mb-3">
                            <label for="discription" class="form-label">Mô tả</label>
                            <input type="text" class="form-control" name="description" id="discription" value="{{this.description}}">
                        </div>
                        <div class="mb-3">
                            <label for="brand" class="form-label">Hãng sản phẩm</label>
                            <input type="text" class="form-control" name="brand" id="brand" value="{{this.brand}}">
                        </div>
                        <div class="mb-3">
                            <label for="price" class="form-label">Giá sản phẩm</label>
                            <input type="text" class="form-control" name="price" id="price" value="{{this.price}}">
                        </div>
                        <div class="mb-3">
                            <label for="image" class="form-label">Link ảnh minh hoạ</label>
                            <input type="text" class="form-control" name="image" id="image" value="{{this.image}}">
                        </div>
                        <button type="submit" class="btn btn-primary w-100 m-2">Submit</button>
                    </form>
                </div>
            </div>
            <div class="col-sm-12 col-xl-6">
                <div class="bg-light rounded h-100 p-4">
                    <h6 class="mb-4">Hình mẫu sản phẩm</h6>
                    <div>
                        <center><img class="rounded-corner me-lg-2" src={{this.image}} alt="Avartar" style="width: 350px; height: 350px"></center>
                        {{!-- <button href="#" class="btn btn-primary w-100 m-2" type="button">Thay ảnh mẫu</button> --}}
                        {{!-- <button href="/admin/product/delete" type="button" class="btn btn-danger w-100 m-2">Xoá sản phẩm</button> --}}
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
</div>
<!-- End Information Product -->