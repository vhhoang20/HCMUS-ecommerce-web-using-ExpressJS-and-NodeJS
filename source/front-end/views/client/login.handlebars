<!-- Login Start -->
<div class="login">
    <div class="container">
        <div class="section-header">
            <h3>User Login</h3>
        </div>
        
        <div class="row">
            <form method="POST" class="form-group" action="/login">
                <div class="row">
                    <label>Username</label>
                    <input class="form-control" type="text" name="username" placeholder="First Name">
                </div>
                <div class="row">
                    <label>Password</label>
                    <input class="form-control" type="password" name="password" placeholder="Last Name">
                </div>
                <div class="row">
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>
    </div>
</div>
<!-- Login End -->


